<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:Munyn.ViewModels"
			 x:DataType="vm:MainViewModel"
			 PointerMoved="OnPointerMoved"
			 PointerReleased="OnPointerReleased"
			 KeyDown="OnKeyDown"
			x:Class="Munyn.Views.NodeCanvasBaseView">
			
	<Grid x:Name="CanvasHost" ClipToBounds="True" Background="Transparent">
		<Canvas x:Name="NodeCanvasBase" Width="3000" Height="3000" RenderTransformOrigin="0,0" Background="#303040"/>
		
	</Grid>
</UserControl>