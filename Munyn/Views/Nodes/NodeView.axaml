<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.NodeView"
			 xmlns:vm="clr-namespace:Munyn.ViewModels"
			 x:DataType="vm:NodeBaseViewModel"
			 xmlns:properties="clr-namespace:Munyn.Views.Nodes.NodeDetails;assembly=Munyn"

			 Canvas.Left="{Binding X}"
			 Canvas.Top="{Binding Y}"
			 PointerPressed="Node_PointerPressed"
			 PointerMoved="Node_PointerMoved"
			 PointerReleased="Node_PointerReleased">



	<UserControl.Resources>
		<Color x:Key="BodyTextColor">#303040</Color>
		<SolidColorBrush x:Key="BodyText" Color="{StaticResource BodyTextColor}"/>
	</UserControl.Resources>

	<StackPanel MinWidth="200" MaxWidth="400">
		<Border BorderThickness="3" CornerRadius="5,5,0,0" BorderBrush="{Binding NodeTheme}" Background="{Binding NodeTheme}">
			<StackPanel Orientation="Horizontal">
				<PathIcon Margin="5,0,0,0" Height="20" Width="20" Foreground="#f2f2f2" Data="{StaticResource pc-display}"/>				
				<TextBlock Text="{Binding NodeName}"  Foreground="#f2f2f2" FontWeight="Bold" FontSize="16" Margin="10"></TextBlock>
			</StackPanel>
		</Border>


		<!-- INFO PANEL -->
		<Border BorderBrush="#f7f7f7" BorderThickness="3" CornerRadius="0,0,5,5" >
			<StackPanel Background="#f7f7f7">
				<ItemsControl x:Name="PropertiesItemControl" ItemsSource="{Binding PropertiesInNodeView}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<properties:NodeGraphViewProperty DataContext="{Binding}"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>

					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel MinHeight="20"></StackPanel>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>



				<Button HorizontalAlignment="Center" CornerRadius="5" Margin="10" Command="{Binding EnterContextButtonCommand}" Background="{Binding NodeTheme}" IsVisible="{Binding IsContext}">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Enter Context"  Foreground="#f2f2f2" FontWeight="Bold" FontSize="12" Margin="5"></TextBlock>
						<Svg Path="avares://Munyn/Assets/Icons/arrow-next-right-icon.svg" Width="6" Margin="0,0,5,0"/>
					</StackPanel>
				</Button>
			</StackPanel>
		</Border>
	</StackPanel>



</UserControl>
