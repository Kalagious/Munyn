<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.HostNode"
			 xmlns:vm="clr-namespace:Munyn.ViewModels"
			 x:DataType="vm:HostNodeViewModel"
			 
			 Canvas.Left="{Binding X}"
			 Canvas.Top="{Binding Y}"
			 PointerPressed="Node_PointerPressed"
			 PointerMoved="Node_PointerMoved"
			 PointerReleased="Node_PointerReleased">
	<Design.DataContext>
		<vm:HostNodeViewModel HostName="Design Host" HostIP="192.168.1.1" HostOS="" X="50" Y="50" />
	</Design.DataContext>

	<Border BorderBrush="#11B4F5" BorderThickness="3" CornerRadius="5" >

			<StackPanel Width="150"  Background="#11B4F5" >
				<StackPanel Background="#11B4F5" Orientation="Horizontal">
					<Svg Path="avares://Munyn/Assets/Icons/pc-display.svg"/>
					<TextBlock Text="{Binding HostName}" Foreground="#f2f2f2" FontWeight="Bold" FontSize="16" Margin="5"></TextBlock>
				</StackPanel>

				<Border BorderBrush="#f7f7f7" BorderThickness="3" CornerRadius="5" >
					<StackPanel Background="#f7f7f7">
						<TextBlock Text="{Binding HostIP}" Foreground="Gray"/>
						<TextBlock Text="{Binding HostOS}" Foreground="Gray"/>
						<TextBlock Text="Tmp" Foreground="Gray"/>
						<TextBlock Text="Tmp" Foreground="Gray"/>
						<TextBlock Text="Tmp" Foreground="Gray"/>
						<TextBlock Text="Tmp" Foreground="Gray"/>
						<TextBlock Text="Tmp" Foreground="Gray"/>

					</StackPanel>
				</Border>
			</StackPanel>
			
			

	</Border>
</UserControl>
