<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.NodeDetails.Properties.GraphView.NodeGraphPropertyCompromisedView"
             PointerPressed="Property_PointerPressed"
             Background="Transparent">
    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
        <PathIcon Data="{Binding Icon}" Width="15" Foreground="{Binding IconColor}"/>
        <TextBlock Text="{Binding PropertyName}" Margin="5,0,0,0" Foreground="Black"></TextBlock>
        <TextBlock Text=":" Margin="0,0,0,0" Foreground="Black"></TextBlock>
        <TextBlock Text="{Binding CompromiseLevel}" Margin="5,0,0,0" Foreground="Black"></TextBlock>
    </StackPanel>
</UserControl>
