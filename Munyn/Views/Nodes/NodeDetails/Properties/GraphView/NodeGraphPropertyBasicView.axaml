<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.NodeDetails.Properties.GraphView.NodeGraphPropertyBasicView"
             Background="Transparent">


		<Button Click="Property_Click" Background="Transparent" BorderThickness="0" Padding="0" Margin="0" HorizontalAlignment="Stretch">
			<StackPanel Orientation="Horizontal">
				<PathIcon Margin="10,2,3,2" Data="{Binding Icon}" Foreground="Black"/>
				<TextBlock  Text="{Binding PropertyName}" Foreground="Black" VerticalAlignment="Center"></TextBlock> 
				<TextBlock Text=":" Foreground="Black" VerticalAlignment="Center"></TextBlock>

				<TextBlock Text="{Binding PropertyValue}" Foreground="Black" VerticalAlignment="Center" Background="Transparent"></TextBlock>

			</StackPanel>
		</Button>

</UserControl>
