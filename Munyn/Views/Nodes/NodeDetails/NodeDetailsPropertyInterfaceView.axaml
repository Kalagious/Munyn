<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.NodeDetails.NodeDetailsPropertyInterfaceView"
			 xmlns:properties="clr-namespace:Munyn.ViewModels.Nodes.Properties;assembly=Munyn"
			 x:DataType="properties:NodePropertyInterface">
	<Grid ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,5,0,5">
		<PathIcon Grid.Column="0" Data="{Binding Icon}" Foreground="{Binding IconColor}" Margin="5,0,5,0"/>
		<TextBox Grid.Column="1" Text="{Binding PropertyName}" VerticalAlignment="Center" FontSize="12" Margin="0,0,10,0" Background="#00000000" BorderBrush="#00000000" IsReadOnly="{Binding !IsEditable}"/>
		<StackPanel Grid.Column="2" Orientation="Vertical">
			<TextBox Text="{Binding InterfaceName}" Watermark="Interface Name" Margin="5,0,5,0" FontSize="12" Background="#00000000" BorderBrush="#00000000" />
			<TextBox Text="{Binding IP}" Watermark="IP Address" Margin="5,0,5,0" FontSize="12" Background="#00000000" BorderBrush="#00000000" />
			<TextBox Text="{Binding MAC}" Watermark="MAC Address" Margin="5,0,5,0" FontSize="12" Background="#00000000" BorderBrush="#00000000" />
		</StackPanel>
	</Grid>
</UserControl>
