<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Munyn.Views.Nodes.NodeDetails.IconSelectionView"
        xmlns:vm="using:Munyn.ViewModels.Nodes.Properties"
        Title="Select an Icon">
    <Window.Resources>
        <vm:StringToIconConverter x:Key="StringToIconConverter"/>
    </Window.Resources>
    <Grid>
        <ListBox ItemsSource="{Binding Icons}" SelectedItem="{Binding SelectedIcon}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Click="SelectIcon" CommandParameter="{Binding}">
                        <PathIcon Data="{Binding ., Converter={StaticResource StringToIconConverter}}" />
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
