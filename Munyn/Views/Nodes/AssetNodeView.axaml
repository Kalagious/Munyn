<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Munyn.Views.Nodes.AssetNodeView"
			 xmlns:vm="clr-namespace:Munyn.ViewModels"
			 x:DataType="vm:AssetNodeViewModel"
			 
			 Canvas.Left="{Binding X}"
			 Canvas.Top="{Binding Y}"
			 PointerPressed="Node_PointerPressed"
			 PointerMoved="Node_PointerMoved"
			 PointerReleased="Node_PointerReleased">



	<UserControl.Resources>
		<Color x:Key="BodyTextColor">#303040</Color>
		<SolidColorBrush x:Key="BodyText" Color="{StaticResource BodyTextColor}"/>
	</UserControl.Resources>

	<StackPanel MinWidth="200" MaxWidth="400">
		<Border BorderThickness="3" CornerRadius="5,5,0,0">
			<Border.BorderBrush>
				<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,50%">
					<GradientStop Color="#eab900" Offset="0.0"/>
					<GradientStop Color="#fa8700" Offset="1.0"/>
				</LinearGradientBrush>
			</Border.BorderBrush>
			<Border.Background>
				<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,50%">
					<GradientStop Color="#eab900" Offset="0.0"/>
					<GradientStop Color="#fa8700" Offset="1.0"/>
				</LinearGradientBrush>
			</Border.Background>
			<StackPanel Orientation="Horizontal">
				<Svg Path="avares://Munyn/Assets/Icons/gold-icon-white.svg" Width="25" Margin="10"/>
				<TextBlock Text="{Binding AssetName}"  Foreground="#f2f2f2" FontWeight="Bold" FontSize="16" Margin="10"></TextBlock>
			</StackPanel>
		</Border>


		<!-- INFO PANEL -->
		<Border BorderBrush="#f7f7f7" BorderThickness="3" CornerRadius="0,0,5,5" >
			<StackPanel Background="#f7f7f7">

				<StackPanel Margin="10,5,10,5" Orientation="Horizontal">
					<Svg Path="avares://Munyn/Assets/Icons/people-fill-magenta.svg"  Width="20"></Svg>
					<TextBlock Margin="5,0,0,0" Text="Owner: " Foreground="{StaticResource BodyTextColor}"/>
					<TextBlock Text="Jeff" Foreground="{StaticResource BodyTextColor}"/>
				</StackPanel>

				<StackPanel Margin="10,5,10,5" Orientation="Horizontal">
					<Svg Path="avares://Munyn/Assets/Icons/folder-line-icon.svg"  Width="17"></Svg>
					<TextBlock Margin="5,0,0,0" Text="Location: /home/jeff/.ssh/id_rsa" Foreground="{StaticResource BodyTextColor}"/>
				</StackPanel>

				<StackPanel Margin="10,5,10,5" Orientation="Horizontal">
					<Svg Path="avares://Munyn/Assets/Icons/file-richtext-fill-black.svg"  Width="20"></Svg>
					<TextBlock Margin="5,0,0,0" Text="Description: Jeff id_rsa ssh private key. " TextWrapping="Wrap" Foreground="{StaticResource BodyTextColor}"/>
				</StackPanel>
			

			</StackPanel>
		</Border>
	</StackPanel>



</UserControl>
